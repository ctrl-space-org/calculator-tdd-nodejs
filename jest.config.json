{
  "projects": [
    {
      "name": "TDD Calculator",
      "displayName": {
        "name": "TDD Calculator - jest",
        "color": "blueBright"
      },
      "coverageThreshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": -10
        }
      },
      "verbose": true,
      "collectCoverage": true,
      "collectCoverageFrom": ["**/*.{js,jsx}", "!**/node_modules/**"],
      "coverageReporters": ["json", "lcov", "text", "clover"]
    },
    {
      "verbose": true,
      "displayName": {
        "name": "TDD Calculator - lint",
        "color": "yellowBright"
      },
      "name": "TDD Calculator - lint",
      "runner": "jest-runner-eslint",
      "testMatch": ["<rootDir>/src/**/*.js", "!**/node_modules/**"]
    }
  ]
}
